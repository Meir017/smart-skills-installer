<Project>
  <!-- Default property values - users can override these in their .csproj -->
  <PropertyGroup Condition="'$(SmartSkillsEnabled)' == ''">
    <SmartSkillsEnabled>true</SmartSkillsEnabled>
  </PropertyGroup>

  <PropertyGroup Condition="'$(SmartSkillsInstallDir)' == ''">
    <SmartSkillsInstallDir>$(MSBuildProjectDirectory)\.smart-skills\</SmartSkillsInstallDir>
  </PropertyGroup>

  <PropertyGroup Condition="'$(SmartSkillsSources)' == ''">
    <SmartSkillsSources></SmartSkillsSources>
  </PropertyGroup>

  <PropertyGroup Condition="'$(SmartSkillsCacheTtlMinutes)' == ''">
    <SmartSkillsCacheTtlMinutes>60</SmartSkillsCacheTtlMinutes>
  </PropertyGroup>

  <PropertyGroup Condition="'$(SmartSkillsFailOnError)' == ''">
    <SmartSkillsFailOnError>false</SmartSkillsFailOnError>
  </PropertyGroup>

  <PropertyGroup Condition="'$(SmartSkillsMaxParallelDownloads)' == ''">
    <SmartSkillsMaxParallelDownloads>4</SmartSkillsMaxParallelDownloads>
  </PropertyGroup>

  <PropertyGroup Condition="'$(SmartSkillsVerbose)' == ''">
    <SmartSkillsVerbose>false</SmartSkillsVerbose>
  </PropertyGroup>

  <PropertyGroup Condition="'$(SmartSkillsAcquisitionPhase)' == ''">
    <!-- build (default) or restore -->
    <SmartSkillsAcquisitionPhase>build</SmartSkillsAcquisitionPhase>
  </PropertyGroup>
</Project>
